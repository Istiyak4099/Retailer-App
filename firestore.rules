
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own user document
    match /Users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can create new customers associated with their UID
    match /Customers/{customerId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/Customers/$(customerId)).data.uid == request.auth.uid;
    }
    
    // Customers can have EMI details
    match /EmiDetails/{emiId} {
        allow create: if request.auth != null;
        allow read, update: if request.auth != null && get(/databases/$(database)/documents/Customers/$(request.resource.data.customerId)).data.uid == request.auth.uid;
    }
  }
}
